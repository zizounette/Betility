<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewLigue1"
                android:layout_width="119dp"
                android:layout_height="121dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="40dp"
                android:background="@color/lightgreen"
                android:foreground="@drawable/rounded_fg"
                android:src="@drawable/ligue1" />

            <ImageView
                android:id="@+id/imageViewPremierleague"
                android:layout_width="119dp"
                android:layout_height="121dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightgreen"
                android:foreground="@drawable/rounded_fg"
                android:src="@drawable/premierleague" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewLiga"
                android:layout_width="119dp"
                android:layout_height="121dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="40dp"
                android:background="@color/lightgreen"
                android:foreground="@drawable/rounded_fg"
                android:src="@drawable/liga" />

            <ImageView
                android:id="@+id/imageViewBundesliga"
                android:layout_width="119dp"
                android:layout_height="121dp"
                android:layout_marginRight="20dp"
                android:background="@color/lightgreen"
                android:foreground="@drawable/rounded_fg"
                android:src="@drawable/bundesliga" />
=
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>